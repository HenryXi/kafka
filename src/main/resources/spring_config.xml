<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-lazy-init="false">
    <context:component-scan base-package="com.henry.xi.kafka"/>
    <bean id="pay_gateway_callback_accountservice_consumer"
          class="com.sinoiov.yyzc.commons.kafka.YyzcKafkaBasicConsumer"
          init-method="init" destroy-method="close">
        <property name="topic" value="test_topic"/>
        <property name="executor"
                  ref="messageExecutor"/>
        <property name="partitionsNum" value="1"/>
    </bean>


</beans>